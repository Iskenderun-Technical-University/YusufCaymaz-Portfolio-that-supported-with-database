@model Portfolio_With_Database.Models.Siniflar.AnaSayfa

@{
    ViewBag.Title = "YeniIkon";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yeni Yazı Ekle</h2>
<br />
<form class="form-group" method="post">
    @Html.LabelFor(x => x.Baslik)
    @Html.TextBoxFor(x => x.Baslik, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Aciklama)
    @Html.TextBoxFor(x => x.Aciklama, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Iletisim)
    @Html.TextBoxFor(x => x.Iletisim, new { @class = "form-control" })
    <br />
    <button class="btn btn-succes">Yazıyı Ekle</button>
</form>
